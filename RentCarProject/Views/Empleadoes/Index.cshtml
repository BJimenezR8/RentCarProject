@model IEnumerable<RentCarProject.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Empleados</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TandaLaboral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcientoComision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TandaLaboral)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PorcientoComision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdEmpleado">Edit</a> |
                    <a asp-action="Details" class=" btn btn-primary" asp-route-id="@item.IdEmpleado">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdEmpleado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
