@model IEnumerable<RentCarProject.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Clientes" asp-action="Index">
    <p>
    Buscar: <input type="text" name="buscar" class="form-text"></input>
    <input type="submit" value="Buscar" class="btn-sm btn-dark"></input>

    </p>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoTarjetaCr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimiteCredito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPersona)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoTarjetaCr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimiteCredito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoPersona)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdClientes">Edit</a> |
                    <a asp-action="Details" class=" btn btn-primary" asp-route-id="@item.IdClientes">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdClientes">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
